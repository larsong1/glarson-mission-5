@{
    // Get the name of the current view
    string currentViewName = ViewContext.RouteData.Values["action"].ToString();
    string showHomeBtn = "block";
    if (currentViewName == "Index")
    {
        currentViewName = "Home";
        showHomeBtn = "none";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@currentViewName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/glarson_mission_5.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
                <span class="fs-4">@currentViewName</span>
            </a>

            <ul class="nav nav-pills">
                <li display="@showHomeBtn" class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link active" aria-current="page">Home</a></li>
                <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Calculator" class="nav-link">Calculator</a></li>
            </ul>
        </header>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Gabriel Larson - gabrieljosephlarson@gmail.com
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
